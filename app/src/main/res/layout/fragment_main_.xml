<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- 상단 제목 -->
    <TextView
        android:id="@+id/home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="홈"
        android:textSize="24sp"
        android:textColor="@color/text_primary"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp" />

    <!-- 광고 배너 -->
    <ImageView
        android:id="@+id/ad_banner"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/home_title"
        android:layout_marginTop="10dp"
        android:src="@drawable/ad_banner_placeholder"
        android:scaleType="fitCenter" />

    <!-- 상단 텍스트 -->
    <TextView
        android:id="@+id/top_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="반갑습니다 :)\n오늘의 계단오르기 운동을 분석했어요"
        android:textSize="18sp"
        android:textColor="@color/text_primary"
        android:layout_below="@id/ad_banner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center" />

    <!-- 원형 진행바와 점수 -->
    <RelativeLayout
        android:id="@+id/circle_progress_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <!-- Circular ProgressBar -->
        <ProgressBar
            android:id="@+id/circular_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:max="5000"
            android:progress="4321"
            android:layout_centerInParent="true"
            android:rotation="270" />

        <TextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4321\n/5000"
            android:textSize="32sp"
            android:textColor="@color/text_primary"
            android:layout_centerInParent="true"
            android:gravity="center" />
    </RelativeLayout>

    <!-- 맞춤 팁 카드 -->
    <LinearLayout
        android:id="@+id/custom_tip_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/card_background"
        android:layout_below="@id/circle_progress_container"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/custom_tip_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="맞춤 팁"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="10dp" />

        <TextView
            android:id="@+id/custom_tip_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 계단오르기 운동을 더욱 효과적으로 할 수 있는 팁을 확인해보세요!"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <!-- 오늘 활동량 텍스트 -->
    <TextView
        android:id="@+id/today_activity_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/custom_tip_card"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <!-- 활동량 바 -->
    <LinearLayout
        android:id="@+id/activity_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_below="@id/today_activity_data">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘 목표치 달성률"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:layout_gravity="center_horizontal" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="58"
            android:max="100"
            android:progressDrawable="@drawable/progress_bar_custom" />
    </LinearLayout>

    <!-- 추가 정보 리스트 -->
    <LinearLayout
        android:id="@+id/info_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_below="@id/activity_bar_container">

        <!-- 각 항목을 여기에 추가 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최근 계단 오르기 기록"
            android:textSize="16sp"
            android:textColor="@color/text_secondary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXXX년 XX월 XX일 XX시 XX분 : XXXX계단 46초"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp" />
    </LinearLayout>

</RelativeLayout>
